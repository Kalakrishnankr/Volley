<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.beachpartnerllc.beachpartner.fragments.BPFinderFragment"
    tools:ignore="NamespaceTypo">

    <!--Layout for Filter start here -->

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frmeOne"
        android:orientation="vertical"
        android:weightSum="4.7">

        <!--Layout for Age card-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:weightSum="2">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/menubar"
                            android:text="Age Limit"/>

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/txtv_minAge"
                            android:textAlignment="viewStart"
                            android:layout_width="0dp"
                            android:textColor="@color/menubar"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_vertical|center"
                            android:layout_weight="0.2"/>
                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/txtv_maxAge"
                            android:layout_width="0dp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/menubar"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:weightSum="3">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Min"
                            android:gravity="center"
                            android:layout_weight="0.3"/>



                        <io.apptik.widget.MultiSlider
                            android:id="@+id/rangebar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.4"
                            app:drawThumbsApart="true"/>



                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Max"
                            android:gravity="center"
                            android:layout_weight="0.3"/>



                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <com.beachpartnerllc.beachpartner.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="15dp"
            android:text="@string/hint_age"/>

        <!--Location card-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:weightSum="2">

                    <com.beachpartnerllc.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:layout_weight="0.8"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/menubar"
                        android:text="State"/>


                    <Spinner
                        android:id="@+id/spinner_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"
                        android:hint="Select"
                        android:background="@color/white"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_weight="1" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <com.beachpartnerllc.beachpartner.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="15dp"
            android:text="@string/hint_location"/>

        <!--card GEnder-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:weightSum="2">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/menubar"
                            android:layout_weight="0.8"
                            android:text="Show me"/>

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/txtv_gender"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textAlignment="viewStart"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnMen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="MEN"
                            android:background="@color/imgBacgnd"
                            android:layout_weight="1"/>
                        <Space
                            android:layout_width="4dp"
                            android:layout_height="match_parent" />

                        <ToggleButton
                            android:id="@+id/btnWomen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/imgBacgnd"
                            android:text="WOMEN"
                            android:layout_weight="1"/>


                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:weightSum="2">

                    <com.beachpartnerllc.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/menubar"
                        android:text="Include Coaches"/>

                    <!--<com.goldemo.beachpartner.CustomTextView
                        android:id="@+id/txtv_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Location"/>-->

                    <Switch
                        android:id="@+id/swich_coach"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>



        <!--play button-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_play"/>

            <com.beachpartnerllc.beachpartner.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play"
                android:gravity="center"/>


        </LinearLayout>










    </LinearLayout>


    <!--Layout for Card and bottom menus-->


    <!--<LinearLayout
        android:id="@+id/llMoreinfo"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_below="@+id/frmeOne"
        android:orientation="vertical">-->


    <!--</LinearLayout>-->


</RelativeLayout>
