<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/location_bg"
            android:orientation="vertical"
            android:weightSum="5">

            <!--Event Heading Inside Map-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_star" />

                <com.beachpartnerllc.beachpartner.CustomTextView
                    android:id="@+id/my_event_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_star" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />
            </LinearLayout>
            <!--Event description box-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:background="@drawable/event_description_box"
                android:orientation="vertical"
                android:weightSum="3">

                <!--FirstField for Location-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="10dp">

                            <com.beachpartnerllc.beachpartner.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Location"
                                android:textColor="#283873" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="10dp">

                            <com.beachpartnerllc.beachpartner.CustomTextView
                                android:id="@+id/my_tv_location"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Venue"
                            android:textColor="#283873" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/my_tv_venue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Event Admin Name"
                            android:textColor="#283873" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/my_tv_admin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <!--Start Date & End Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/start_date" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="39dp"
                        android:weightSum="1">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Start Date:"
                            android:gravity="center"
                            android:layout_weight="0.5"/>
                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/my_tv_startDate"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:layout_weight="0.5"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/end_date"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="39dp"
                        android:weightSum="1">

                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="End Date:"
                            android:gravity="center"
                            android:layout_weight="0.5"/>
                        <com.beachpartnerllc.beachpartner.CustomTextView
                            android:id="@+id/my_tv_endDate"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:layout_weight="0.5"/>


                    </LinearLayout>




                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

            </LinearLayout>


        </LinearLayout>






        <!--Registration,Invite Partner,back-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:weightSum="5">

            <!--Invite partne-button Register-button Back-button-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="5.2">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <com.beachpartnerllc.beachpartner.CustomButton
                            android:id="@+id/my_btn_invite_partner"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:textSize="12sp"
                            android:background="@drawable/event_desc_buttons"
                            android:text="Court Assignment"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2" />

                        <com.beachpartnerllc.beachpartner.CustomButton
                            android:id="@+id/my_btn_back"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:textSize="12sp"
                            android:background="@drawable/event_desc_buttons"
                            android:text="Back"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>


            </LinearLayout>

            <!--Registration starts/Deadline-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="20dp">

                    <com.beachpartnerllc.beachpartner.CustomTextView
                        android:id="@+id/heading_who_are_going"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Event Partners"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_blue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.2"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progress_partners"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/AVLoadingIndicatorView"
                        android:visibility="gone"
                        android:elevation="10dp"
                        android:layout_centerInParent="true"
                        app:indicatorName="LineScaleIndicator"
                        app:indicatorColor="@color/menubar"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_partner_notes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beachpartnerllc.beachpartner.CustomTextView
                        android:id="@+id/no_partners_txtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Event Partners"
                        android:textSize="@dimen/text_size"
                        android:visibility="gone"
                        android:gravity="center"/>




                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
