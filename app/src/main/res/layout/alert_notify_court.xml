<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:weightSum="8.5">

        <!--Heading-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <com.goldemo.beachpartner.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Notify Court Number" />

        </LinearLayout>

        <!--Text-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <com.goldemo.beachpartner.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hint_court_assign_msg" />

        </LinearLayout>

        <!--EditText court assign-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <com.goldemo.beachpartner.CustomEditText
                android:id="@+id/edt_notify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your court number"/>
        </LinearLayout>

        <!--Buttons-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2.1"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <com.goldemo.beachpartner.CustomButton
                android:id="@+id/btn_ntfy_cancel"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="0.9"
                android:background="@drawable/event_desc_buttons"
                android:textColor="@color/white"
                android:text="Cancel"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>


            <com.goldemo.beachpartner.CustomButton
                android:id="@+id/btn_ntfy_ok"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="0.9"
                android:background="@drawable/event_desc_buttons"
                android:textColor="@color/white"
                android:text="Notify"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>