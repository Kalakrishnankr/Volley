        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.beachpartnerllc.beachpartner.CustomTextView
                android:text="Region"
                android:layout_width="0dp"
