<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="vertical"
        android:background="@color/white">

        <!--Event Types-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.goldemo.beachpartner.CustomTextView
                android:text="Event Types"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.8"/>

            <Spinner
                android:id="@+id/event_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"/>




        </LinearLayout>

        <!--Sub Types-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.goldemo.beachpartner.CustomTextView
                android:text="Sub Types"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.8"/>

            <Spinner
                android:id="@+id/subtypes_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"/>




        </LinearLayout>


        <!--Year-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.goldemo.beachpartner.CustomTextView
                android:text="Year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.8"/>

            <Spinner
                android:id="@+id/year_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"/>




        </LinearLayout>

        <!--Month-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.goldemo.beachpartner.CustomTextView
                android:text="Month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.8"/>

            <Spinner
                android:id="@+id/month_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"/>




        </LinearLayout>

        <!--State-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.goldemo.beachpartner.CustomTextView
                android:text="State"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.8"/>

            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"/>




        </LinearLayout>
        <!--Region-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.goldemo.beachpartner.CustomTextView
                android:text="Region"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.8"/>

            <Spinner
                android:id="@+id/region_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"/>




        </LinearLayout>

        <!--Search Button-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center">

            <com.goldemo.beachpartner.CustomButton
                android:id="@+id/btn_invite_partner"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:background="@drawable/event_desc_buttons"
                android:text="Search"
                android:textColor="@color/white" />




        </LinearLayout>


    </LinearLayout>


</LinearLayout>