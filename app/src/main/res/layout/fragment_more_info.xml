                </LinearLayout>

                <!--CBVA Last Name-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_CBVALName"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvCBVALName"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--Willingness To Travel-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center_vertical"
                        android:text="@string/hint_WtoTravel"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvWtoTravel"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--High school attended-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_highschool"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvHighschool"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>


                <!--Indoor Club played at-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_indoorclub"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvIndoorClub"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--College (Club)-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_collgeclub"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvColgClub"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--College (Beach)-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_collgebeach"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvColgBeach"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--College (indoor)-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_colgindoor"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvColgIndoor"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--Points-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_points"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvPoints"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--YouTube Link-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_youlink"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvYouLinks"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--Bio Link-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_biolink"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvBioLinks"
                        android:enabled="false"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <!--Ranking-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/hint_rank"
                        android:textStyle="bold" />

                    <com.goldemo.beachpartner.CustomEditText
                        android:id="@+id/txtvRank"
                        android:enabled="false"
                        android:layout_width="0dp"
