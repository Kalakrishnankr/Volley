<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgimage"
    android:orientation="vertical"
    tools:context="com.goldemo.beachpartner.LoginActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:background="@drawable/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_box"
        android:layout_margin="30dp"
        android:weightSum="2"
        android:orientation="vertical">


        <com.goldemo.beachpartner.CustomTextView
            android:id="@+id/txtv_welcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textsize_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="4">

            <!-- Email Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:layout_weight="1.4">

                <com.goldemo.beachpartner.CustomEditText
                    android:id="@+id/input_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_userName"
                    android:textColor="@color/colorPrimary"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:layout_weight="1.4"
                app:passwordToggleEnabled="true">

                <com.goldemo.beachpartner.CustomEditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:textColor="@color/colorPrimary"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <com.goldemo.beachpartner.CustomButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginTop="10dp"
                android:background="@color/btnColor"
                android:text="@string/loginBtn"
                android:textColor="@color/white" />

            <com.goldemo.beachpartner.CustomTextView
                android:id="@+id/forgotPass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/btnColor"
                android:text="@string/hint_forget"
                android:textSize="@dimen/txtview_textsize"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3">

                <com.goldemo.beachpartner.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="@string/connect"
                    android:textSize="@dimen/txtview_textsize"
                    android:textColor="@color/blueDark"
                    tools:ignore="RtlCompat" />
                <!--<Space
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />-->

                <ImageView
                    android:id="@+id/login_button"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:adjustViewBounds="false"
                    android:background="@drawable/icon_fb"
                    android:cropToPadding="false" />
                <!--<ImageView
                    android:id="@+id/fbLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/icon_fb" />-->


                <Space
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/instaLogin"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/icon_insta" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                    <com.goldemo.beachpartner.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/txtview_textsize"
                        android:text="@string/dntaccount"
                        android:textColor="@color/colorText"
                        android:layout_gravity="end" />
                   <!-- <Space
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="1dp" />-->

                    <LinearLayout
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.goldemo.beachpartner.CustomTextView
                            android:id="@+id/tSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/signup"
                            android:textSize="@dimen/txtview_textsize"
                            android:layout_gravity="start"
                            android:textAlignment="textStart"
                            android:textColor="@color/blueDark" />

                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
