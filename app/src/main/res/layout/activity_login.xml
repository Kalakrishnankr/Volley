<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgimage"
    android:orientation="vertical"
    android:weightSum="10">
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="@drawable/logo" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_weight="6"
        android:weightSum="2"
        android:orientation="vertical">


        <com.goldemo.beachpartner.CustomTextView
            android:id="@+id/txtv_welcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textSize="@dimen/header_text_size"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:weightSum="4">

            <!-- Email Label -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/float_label_username"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:layout_weight="1">

                <com.goldemo.beachpartner.CustomEditText
                    android:id="@+id/input_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_userName"
                    android:textColor="@color/colorPrimary"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/float_label_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:layout_weight="1"
                app:passwordToggleEnabled="true">

                <com.goldemo.beachpartner.CustomEditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:textColor="@color/colorPrimary"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="0.8">


                <com.goldemo.beachpartner.CustomButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:background="@color/btnColor"
                    android:textSize="@dimen/text_size"
                    android:text="@string/loginBtn"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_button"/>
            </LinearLayout>
            <com.goldemo.beachpartner.CustomTextView
                android:id="@+id/forgotPass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/text_size"
                android:layout_weight="1.2"
                android:gravity="top|center"
                android:textColor="@color/btnColor"
                android:text="@string/hint_forget"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="0.2"
            android:weightSum="3">



            <com.goldemo.beachpartner.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:text="@string/connect"
                android:textColor="@color/blueDark"/>
            <!--<Space
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="1dp" />-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/icon_fb" />


                <Space
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/instaLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/icon_insta" />
                <Space
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="1dp" />


            </LinearLayout>



        </LinearLayout>

        <Space
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.25"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.goldemo.beachpartner.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textSize="@dimen/text_size"
            android:text="@string/dntaccount"
            android:textColor="@color/white"
            android:gravity="center|end"/>


        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.goldemo.beachpartner.CustomTextView
                android:id="@+id/tSignUp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size"
                android:text="@string/signup"
                android:gravity="center|start"
                android:textColor="@color/blueDark" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
